{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["semistandard", "plugin:astro/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "space-before-function-paren": "off"
  },
  "overrides": [
    {
      "files": ["*.astro"],
      "parser": "astro-eslint-parser"
    }
  ]
}

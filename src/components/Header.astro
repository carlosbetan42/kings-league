---
import Logo from './Logo.astro';

const BASE_URL_LOGOS = 'https://kings-league-api.carlos-betan-42.workers.dev/static/logos';

const response = await fetch('https://kings-league-api.carlos-betan-42.workers.dev/teams');
const teams = await response.json();
---

<header
  class='flex items-center w-screen bg-gradient-to-b from-[#FF6900] via-[#FF6900] to-[#E66000] p-8 gap-x-8'
>
  <Logo />

  <div class='flex flex-col h-full gap-4'>
    <nav>
      <ul class='flex gap-x-4 [&>li>a:hover]:scale-150'>
        {
          teams.map(({ id, image, name }) => {
            return (
              <li>
                <a class='group transition block' href={`/team/${id}`}>
                  <img
                    class='group-hover:drop-shadow-[0px_0px_8px_#fff] drop-shadow-[0px_0px_4px_#fff] aspect-square w-12'
                    src={`${BASE_URL_LOGOS}${image}`}
                    alt={`Escudo del equipo ${name}`}
                  />
                </a>
              </li>
            );
          })
        }
      </ul>
    </nav>

    <nav>
      <ul
        class='flex text-white gap-x-2 font-semibold text-md [&>li>a:hover]:opacity-100 [&>li>a:hover]:underline'
      >
        <li>
          <a href='/'>Home</a>
        </li>
        <li>
          <a href='/teams'>Teams</a>
        </li>
        <li>
          <a href='/calendario'>Calendario</a>
        </li>
        <li>
          <a href='/estadisticas'>Estadisticas</a>
        </li>
        <li>
          <a href='/contacto'>Contacto</a>
        </li>
        <li>
          <a href='/reglamento'>Reglamento</a>
        </li>
      </ul>
    </nav>
  </div>
</header>
